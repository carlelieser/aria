{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./*"],
			"@domain/*": ["./src/domain/*"],
			"@application/*": ["./src/application/*"],
			"@infrastructure/*": ["./src/infrastructure/*"],
			"@plugins/*": ["./src/plugins/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"svg.d.ts"
	]
}
