{
  "name": "aria",
  "main": "lib/entry",
  "version": "0.7.0-beta",
  "author": {
    "name": "Carlos Santos",
    "email": "hello@carlelieser.dev",
    "url": "https://carlelieser.dev"
  },
  "license": "MIT",
  "scripts": {
    "postinstall": "patch-package",
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "prebuild": "expo prebuild --clean",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "fastlane": "source .env && fastlane ios build_adhoc",
    "build:android": "eas build --platform android --local --output out/aria.apk",
    "build:ios": "eas build --platform ios --local --output out/aria.ipa",
    "screenshots": "./scripts/screenshots/run-maestro-screenshots.sh --both",
    "screenshots:light": "./scripts/screenshots/run-maestro-screenshots.sh --light",
    "screenshots:dark": "./scripts/screenshots/run-maestro-screenshots.sh --dark",
    "act:ci": "act -W .github/workflows/ci.yml push --container-architecture linux/amd64",
    "act:release": "act -W .github/workflows/release.yml push --container-architecture linux/amd64 -P self-hosted=catthehacker/ubuntu:act-latest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@gorhom/bottom-sheet": "^5.2.8",
    "@material/material-color-utilities": "^0.3.0",
    "@pchmn/expo-material3-theme": "^1.3.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/slider": "5.1.1",
    "@react-native-cookies/cookies": "^6.2.1",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.9.3",
    "@react-navigation/native": "^7.1.8",
    "@rn-primitives/portal": "^1.3.0",
    "@shopify/flash-list": "2.0.2",
    "audio-equalizer": "file:./modules/audio-equalizer",
    "audio-metadata": "file:./modules/audio-metadata",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "buffer": "^6.0.3",
    "event-target-shim": "^6.0.2",
    "expo": "~54.0.31",
    "expo-asset": "~12.0.12",
    "expo-build-properties": "~1.0.10",
    "expo-constants": "~18.0.8",
    "expo-crypto": "~15.0.8",
    "expo-dev-client": "~6.0.20",
    "expo-document-picker": "~14.0.8",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.21",
    "expo-splash-screen": "~31.0.13",
    "expo-sqlite": "~16.0.10",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-video": "~3.0.15",
    "expo-web-browser": "~15.0.10",
    "jintr": "^3.3.1",
    "lucide-react-native": "^0.562.0",
    "music-metadata": "^11.10.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-draggable-flatlist": "^4.0.3",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-image-colors": "^2.5.1",
    "react-native-pager-view": "6.9.1",
    "react-native-paper": "^5.13.1",
    "react-native-paper-tabs": "^0.11.4",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.15.1",
    "react-native-svg-transformer": "^1.5.2",
    "react-native-track-player": "^4.1.2",
    "react-native-url-polyfill": "^3.0.0",
    "react-native-web": "~0.21.2",
    "react-native-webview": "^13.16.0",
    "react-native-worklets": "0.5.1",
    "shaka-player": "^4.16.13",
    "text-encoding": "^0.7.0",
    "web-streams-polyfill": "^4.2.0",
    "youtubei.js": "^16.0.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/node": "^25.0.6",
    "@types/react": "~19.1.10",
    "@types/text-encoding": "^0.0.40",
    "@vitest/coverage-v8": "^4.0.16",
    "baseline-browser-mapping": "^2.9.14",
    "eslint": "^9.39.2",
    "eslint-config-expo": "~10.0.0",
    "jsdom": "^27.4.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.7.4",
    "react-test-renderer": "^19.1.0",
    "sharp": "^0.34.5",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "private": true,
  "expo": {
    "install": {
      "exclude": [
        "@react-native-community/slider",
        "react-native-gesture-handler",
        "react-native-svg",
        "react-native-webview"
      ]
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@pchmn/expo-material3-theme",
          "@react-native-cookies/cookies",
          "react-native-track-player",
          "audio-metadata",
          "audio-equalizer"
        ]
      }
    }
  }
}
